@model Booking

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Booking Progress Bar -->
            <partial name="_BookingProgressBar" model="2" />

            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- Villa Details Column -->
                        <div class="col-lg-5 bg-light">
                            <div class="p-4 h-100 d-flex flex-column">
                                <div class="mb-4 d-flex justify-content-between align-items-center">
                                    <h4 class="text-primary fw-bold mb-0">Villa Details</h4>
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-arrow-left"></i> Change
                                    </a>
                                </div>
                                
                                <div class="villa-preview mb-4">
                                    <img src="@Model.Villa.ImageUrl" alt="@Model.Villa.Name" class="img-fluid rounded mb-3">
                                    <h5 class="text-primary fw-bold">@Model.Villa.Name</h5>
                                    <div class="d-flex gap-3 mb-3">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-people text-muted me-2"></i>
                                            <span>@Model.Villa.Occupancy</span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-rulers text-muted me-2"></i>
                                            <span>@Model.Villa.Sqft sqft</span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="booking-summary p-3 bg-white rounded shadow-sm mb-3">
                                    <h6 class="fw-bold mb-3">Booking Summary</h6>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Check-in</span>
                                        <span class="fw-medium">@Model.CheckInDate.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Check-out</span>
                                        <span class="fw-medium">@Model.CheckOutDate.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Stay Duration</span>
                                        <span class="fw-medium">@Model.Nights night@(Model.Nights > 1 ? "s" : "")</span>
                                    </div>
                                    <hr>
                                    <div class="d-flex justify-content-between">
                                        <span class="fw-bold">Total</span>
                                        <span class="fw-bold text-primary">@Model.TotalCost.ToString("c")</span>
                                    </div>
                                </div>
                                
                                <div class="mt-auto">
                                    <partial name="_TrustSignals" />
                                </div>
                            </div>
                        </div>
                        
                        <!-- Booking Form Column -->
                        <div class="col-lg-7">
                            <div class="p-4">
                                <h4 class="text-primary fw-bold mb-4">Enter Your Details</h4>
                                
                                <form method="post" id="bookingForm">
                                    <input asp-for="VillaId" hidden />
                                    <input asp-for="UserId" hidden />
                                    <input asp-for="CheckInDate" hidden />
                                    <input asp-for="CheckOutDate" hidden />
                                    <input asp-for="Nights" hidden />
                                    
                                    <div class="mb-3">
                                        <label asp-for="Name" class="form-label">Full Name</label>
                                        <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label asp-for="Email" class="form-label">Email Address</label>
                                            <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label asp-for="Phone" class="form-label">Phone Number</label>
                                            <input asp-for="Phone" class="form-control" placeholder="Enter your phone number" />
                                            <span asp-validation-for="Phone" class="text-danger"></span>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-4">
                                        <label class="form-label">Special Requests (Optional)</label>
                                        <textarea class="form-control" rows="3" placeholder="Any special requests or requirements?"></textarea>
                                    </div>
                                    
                                    <div class="mb-3 form-check">
                                        <input type="checkbox" class="form-check-input" id="termsCheck" required>
                                        <label class="form-check-label" for="termsCheck">
                                            I agree to the <a href="#">Terms and Conditions</a> and <a href="#">Privacy Policy</a>
                                        </label>
                                    </div>
                                    
                                    <div class="d-grid mt-4">
                                        @if (Model.Villa.IsAvailable)
                                        {
                                            <button type="submit" class="btn btn-primary btn-lg">
                                                Proceed to Payment <i class="bi bi-arrow-right ms-2"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-danger btn-lg" disabled>
                                                Sold Out <i class="bi bi-x-circle ms-2"></i>
                                            </button>
                                        }
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}