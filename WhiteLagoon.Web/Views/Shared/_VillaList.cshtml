@model HomeVM
<div id="VillasList">
    @if (Model.VillaList != null && Model.VillaList.Any())
    {
        <div class="row g-4">
            @foreach (var villa in Model.VillaList)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 villa-card shadow-sm border-0">
                        @if (!villa.IsAvailable)
                        {
                            <div class="villa-badge">
                                <span class="badge bg-danger">Sold Out</span>
                            </div>
                        }
                        <img src="@villa.ImageUrl" class="card-img-top" alt="@villa.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="card-title mb-0 text-primary">@villa.Name</h5>
                                <span class="badge bg-primary rounded-pill">$@villa.Price.ToString("0")/night</span>
                            </div>
                            
                            <p class="card-text mb-3" style="height: 50px; overflow: hidden;">
                                @(string.IsNullOrEmpty(villa.Description) ? "" : new string(Html.Raw(villa.Description).ToString().Take(100).ToArray()) + "...")
                            </p>
                            
                            <div class="villa-amenities mb-3">
                                <span class="villa-amenity">
                                    <i class="bi bi-people"></i> @villa.Occupancy
                                </span>
                                <span class="villa-amenity">
                                    <i class="bi bi-rulers"></i> @villa.Sqft sqft
                                </span>
                                @if (villa.VillaAmenity != null && villa.VillaAmenity.Any())
                                {
                                    <span class="villa-amenity">
                                        <i class="bi bi-check-circle"></i> @villa.VillaAmenity.Count() Amenities
                                    </span>
                                }
                            </div>
                            
                            <div class="mt-auto d-flex justify-content-between gap-2">
                                <button type="button" class="btn btn-outline-primary flex-fill" data-bs-toggle="modal" data-bs-target="#villaModal-@(villa.Id)">
                                    <i class="bi bi-info-circle"></i> Details
                                </button>
                                
                                @if (Model.CheckInDate > DateOnly.FromDateTime(DateTime.Now))
                                {
                                    if (villa.IsAvailable)
                                    {
                                        <a asp-controller="Booking" asp-action="FinalizeBooking" 
                                           asp-route-villaId="@villa.Id" asp-route-checkInDate="@Model.CheckInDate"
                                           asp-route-nights="@Model.Nights"
                                           class="btn btn-success flex-fill">
                                            <i class="bi bi-calendar-check"></i> Book Now
                                        </a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-danger flex-fill" disabled>
                                            <i class="bi bi-calendar-x"></i> Sold Out
                                        </button>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Villa Details Modal -->
                <div class="modal fade" id="villaModal-@(villa.Id)" tabindex="-1" aria-labelledby="villaModalLabel-@(villa.Id)" aria-hidden="true">
                    <div class="modal-dialog modal-xl">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title text-primary fw-bold" id="villaModalLabel-@(villa.Id)">@villa.Name Details</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <partial name="_VillaDetail" model="@villa" />
                            </div>
                            <div class="modal-footer">
                                <button asp-controller="Home" asp-action="GeneratePPTExport"
                                        asp-route-id="@villa.Id" type="submit" class="btn btn-outline-warning">
                                    <i class="bi bi-file-earmark-ppt"></i> Download Villa PPT
                                </button>
                                
                                @if (Model.CheckInDate > DateOnly.FromDateTime(DateTime.Now) && villa.IsAvailable)
                                {
                                    <a asp-controller="Booking" asp-action="FinalizeBooking" 
                                       asp-route-villaId="@villa.Id" asp-route-checkInDate="@Model.CheckInDate"
                                       asp-route-nights="@Model.Nights"
                                       class="btn btn-success">
                                        <i class="bi bi-calendar-check"></i> Book This Villa
                                    </a>
                                }
                                
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <img src="~/images/no-results.svg" alt="No Villas Found" class="mb-4" style="max-width: 200px; opacity: 0.6;">
            <h3 class="text-muted">No Villas Available</h3>
            <p class="text-muted">Please try different dates or check back later.</p>
        </div>
    }
</div>