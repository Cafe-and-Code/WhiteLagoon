@model LoginVM

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow border-0 rounded-3">
                    <div class="card-header py-4">
                        <div class="d-flex justify-content-center align-items-center">
                            <i class="bi bi-person-circle text-white fs-1 me-3"></i>
                            <h2 class="text-center mb-0 fw-bold text-white">Welcome Back</h2>
                        </div>
                        <p class="text-center text-white-50 mt-2 mb-0">Sign in to your White Lagoon account</p>
                    </div>
                    <div class="card-body p-4 p-md-5">
                        <form method="post">
                            <input asp-for="RedirectUrl" hidden />
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" aria-required="true" />
                                <label asp-for="Email" class="form-label"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <div class="form-floating mb-3">
                                <input asp-for="Password" class="form-control" aria-required="true" />
                                <label asp-for="Password" class="form-label"></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            
                            <div class="form-check mb-4">
                                <input class="form-check-input" asp-for="RememberMe" />
                                <label class="form-check-label" asp-for="RememberMe">
                                    Remember Me
                                </label>
                            </div>
                            
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-primary btn-lg">Log In</button>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-action="ForgotPassword" class="text-primary text-decoration-none">
                                    <i class="bi bi-key me-1"></i>Forgot your password?
                                </a>
                                <a asp-action="Register" asp-route-returnUrl="@Model.RedirectUrl" class="text-primary text-decoration-none">
                                    <i class="bi bi-person-plus me-1"></i>Register as a new user
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <p class="text-muted">
                        <i class="bi bi-shield-lock me-1"></i>
                        Secure login protected by industry-standard encryption
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}