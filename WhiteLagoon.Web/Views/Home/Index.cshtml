@model HomeVM

<!-- Hero Section -->
<section class="hero-section" style="background-image: url('/images/slide1.jpg'); height: 80vh; background-attachment: fixed;">
    <div class="hero-overlay"></div>
    <div class="container h-100 d-flex flex-column justify-content-center hero-content">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8 text-center">
                <h1 class="display-4 fw-bold mb-4">Your Dream Villa Awaits</h1>
                <p class="lead mb-5">Book your perfect getaway at White Lagoon. Luxurious villas, stunning views, and exceptional service.</p>
                <a href="#search-section" class="btn btn-primary btn-lg px-5 py-3 fw-medium animate-pulse">
                    Find Your Villa <i class="bi bi-arrow-down-circle ms-2"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="mouse"></div>
    </div>
</section>

<!-- Search Section -->
<section id="search-section" class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="search-container">
                    <h2 class="h3 mb-4 text-center text-primary fw-bold">Find Available Villas</h2>
                    <form method="post" asp-action="GetVillasByDate" id="searchForm">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-5">
                                <label class="form-label fw-medium" asp-for="CheckInDate">Check In Date</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-calendar3"></i></span>
                                    <input asp-for="CheckInDate" type="date" class="form-control form-control-lg" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" required />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-medium" asp-for="Nights">Number of Nights</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-moon-stars"></i></span>
                                    <select class="form-select form-select-lg" asp-for="Nights">
                                        @for (var i = 1; i <= 14; i++)
                                        {
                                            <option value="@i">@i Night@(i > 1 ? "s" : "")</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <button type="button" onclick="fnLoadVillaList()" class="btn btn-primary btn-lg w-100">
                                    <i class="bi bi-search"></i> Search
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Trust Signals -->
<section class="py-4 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="d-flex flex-wrap justify-content-center">
                    <div class="trust-badge">
                        <i class="bi bi-check-circle-fill"></i> Best Price Guarantee
                    </div>
                    <div class="trust-badge">
                        <i class="bi bi-shield-check"></i> Secure Booking
                    </div>
                    <div class="trust-badge">
                        <i class="bi bi-calendar-check"></i> Free Cancellation
                    </div>
                    <div class="trust-badge">
                        <i class="bi bi-star-fill"></i> 4.8/5 Customer Rating
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Villa List Section -->
<section class="py-5">
    <div class="container">
        <!-- Add loading spinner -->
