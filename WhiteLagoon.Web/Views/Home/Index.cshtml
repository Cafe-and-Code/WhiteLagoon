@section scripts{
    <script>
        function fnLoadVillaList() {
            // Validate date input
            const checkInDate = $("#CheckInDate").val();
            const nights = $("#Nights").val();
            
            if (!checkInDate) {
                toastr.warning("Please select a check-in date");
                return false;
            }
            
            // Ensure the date is not in the past
            const today = new Date();
            today.setHours(0, 0, 0, 0);
            const selectedDate = new Date(checkInDate);
            
            if (selectedDate < today) {
                toastr.warning("Check-in date cannot be in the past");
                return false;
            }
            
            $('.spinner').show();
            var objData = {
                checkInDate: checkInDate,
                nights: nights
            };

            $.ajax({
                type: "POST",
                data: objData,
                url: "@Url.Action("GetVillasByDate","Home")",
                success: function (data) {
                    $("#VillasList").empty();
                    $("#VillasList").html(data);
                    $('.spinner').hide();
                    $('html, body').animate({
                        scrollTop: $("#VillasList").offset().top - 100
                    }, 500);
                },
                failure: function (response) {
                    $('.spinner').hide();
                    toastr.error("Error: " + response.responseText);
                },
                error: function (response) {
                    $('.spinner').hide();
                    if (response.responseText) {
                        toastr.error("Error: " + response.responseText);
                    } else {
                        toastr.error("An error occurred while searching for villas. Please try again.");
                    }
                }
            });
        }

        // Set default check-in date to tomorrow
        $(document).ready(function() {
            // Initialize toastr notification settings
            toastr.options = {
                closeButton: true,
                progressBar: true,
                positionClass: "toast-top-right",
                timeOut: 5000
            };
            
            // Set tomorrow as the default date
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            const formattedDate = tomorrow.toISOString().split('T')[0];
            $("#CheckInDate").val(formattedDate);
            
            // Enable pressing Enter key to search
            $("#searchForm").on("keypress", function(e) {
                if (e.which === 13) {
                    e.preventDefault();
                    fnLoadVillaList();
                }
            });
        });
    </script>
}